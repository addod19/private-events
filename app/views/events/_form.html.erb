<%= form_for(@event) do |f| %>
    <%= f.label :date %>
    <%= f.text_field :date %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.label :description %>
    <%= f.text_field :description %>

  <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "Create your Events", class: "btn btn-primary" %>

<% end %>