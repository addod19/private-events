<div class="row">
    <div class="col-sm-12 col-md-6">
        <h3 class="text-center">Upcoming Events</h3>
            <% if @upcoming.any? %>
                <ul>
                    <div class="jumbotron">
                        <%= render @upcoming %>
                    </div>
                </ul>
            <% end %>
    </div>
    <div class="col-sm-12 col-md-6">
        <h3 class="text-center">Past Events</h3>
            <% if @past.any? %>
                <ul>
                    <div class="jumbotron">
                        <%= render @past %>
                    </div>
                </ul>
            <% end %>
    </div>
</div>

<div class="row">
    <%= render 'list_all_events' %>
</div>
