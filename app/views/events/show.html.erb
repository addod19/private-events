<h2>Events show page</h2>

<%= @event.date %><br>
<%= @event.title %><br>
<%= @event.location %><br>
<%= @event.description %><br>
<%= @creator.name %>
<br>
<hr>
<% if @event.users.any? %>
  <% @event.users.each do |attendee| %>
      <span class="attendee">
          <%= attendee.name %>
      </span> <br/>
  <% end %>
<% else %>
  No attendees
<% end %><br/>

<h4>Upcoming Events</h4>

<% if @event.inspect %>
  
  <%= render @event %>
<% end %>