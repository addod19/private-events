<header id="top">

<nav class="navbar navbar-fixed-top navbar-expand-lg navbar-light bg-dark">
<div class="container">

  <%= link_to "eventbrite", root_path, id: "logo", class: "align-middle navbar-brand text-white"%>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
    <ul class="navbar-nav mr-auto">
      <% if signed_in? %>
          <li class="nav-item"><%= link_to "Sign out: ", signout_path, method: :delete, class:"nav-link text-danger" %></li>
          <li class="nav-item nav-link text-primary" ><%= link_to "#{current_user.name}", user_path(current_user.id) %></li>
          <li class="nav-item"><%= link_to "Users", users_path, class:"nav-link text-white" %></li>
        <% else %>
          <li class="nav-item"><%= link_to "Sign in", signin_path, class:"nav-link text-white" %></li>
        <% end %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Event actions
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink" class="dark-bg">
          <%= link_to "Show all events", events_path, class: "dropdown-item" %>
          <%= link_to "Create Event", new_event_path, class:"dropdown-item" %>

        </div>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search Events by title" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
  </div>
</div>
</nav>

</header>

